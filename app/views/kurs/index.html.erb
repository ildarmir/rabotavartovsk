<h1>Listing courses</h1>

<table>
  <tr>
    <th>Дата</th>
    <th>Название</th>
    <th>Место</th>
    <th>Формат</th>
    <th>Цена</th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.date %></td>
    <td><%= link_to course.title, action: :show, id: course.id  %></td>
    <td><%= course.place %></td>
    <td><%= course.format %></td>
    <td><%= course.price %></td>
  </tr>
<% end %>
</table>

