    <div class="row">
    
    <fieldset>
      <legend>Работнику</legend>
          
        
      
	    <div>
		    <div class="span3">
			    <h4><a href="/resumes/new">Добавить резюме</h4>
			    <%= image_tag("addresume.png")%></a>
		    </div>
		    <div class="span3">
                      <h4><%= link_to "Новые вакансии","vacancies" %></h4>
			    <ul class="unstyled">
				    <% @vac.each do |f| %>
                              
				   <li>               
	               <%= link_to f.position, { :controller => :vacancies,:action => :show, :id => f.id } %> 
	               <% if session[:group_id] == 2 %>
	               <%= link_to image_tag("edit_profile.jpg", :border => 0),{ :controller => :vacancies, :action => :edit, :id => f.id } %> 
	               <%= link_to image_tag("deleteBut.gif", :border => 0), { :controller => :vacancies, :action => :destroy, :id => f.id }, :method => :delete, :confirm => "Are you sure?" %>
	               <% end %>
                       </li><br> 
                       <% end %>
			    </ul>
		    </div>
		    <div class="span3">
                    <h4><%= link_to "Популярные вакансии","vacancies" %></h4>
			    <ul class="unstyled">
                                <% @vac.each do |f| %>
                              
				   <li>               
	               <%= link_to f.position, { :controller => :vacancies,:action => :show, :id => f.id } %> 
	               <% if session[:group_id] == 2 %>
	               <%= link_to image_tag("edit_profile.jpg", :border => 0),{ :controller => :vacancies, :action => :edit, :id => f.id } %> 
	               <%= link_to image_tag("deleteBut.gif", :border => 0), { :controller => :vacancies, :action => :destroy, :id => f.id }, :method => :delete, :confirm => "Are you sure?" %>
	               <% end %>
                       </li><br>
                       <% end %>
				    <br>
				    
			    </ul>
		    </div>
	    </div>
	    </fieldset>
    </div>

