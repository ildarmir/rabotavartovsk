<div id="filterContainer">
  Фильтр:<input type="text" id="quickSearchQuery" class="span8" placeholder="Введите название резюме">
</div>
<div id="resume_search">
  <table id='resume_table_result'>
    <tr>
      <td class='resume_table_header' id='resume_profession'>Позиция</td>
      <td class='resume_table_header' id='resume_notation'>Зарплата</td>
      <td class='resume_table_header' id='resume_lengthOfService'>Опыт</td>
      <td class='resume_table_header' id='resume_earns'>Имя</td>
      <td class='resume_table_header' id='resume_organisation'>Город</td>
      <td class='resume_table_header' id='resume_phone'>Дата</td>
      <td class='resume_table_header' id='resume_dateOf'>Возраст</td>
    </tr>
    <% @resumes.each do |t| %>
      <tr>
        <td class='resume_table_result_left'> <%= link_to short_link(t.position), "/resumes/#{t.id}", title: "Подробнее о резюме #{t.position}" %></td>
        <td> <%= short_str(t.min_wage) if t.min_wage %> </td>
        <td> <%= short_str(t.experience) if t.experience%></td>
        <td> <%= short_str(t.name) if t.name %></td>
        <td> <%= short_str(t.city.name) if t.city.name %></td>
        <td> <%= t.date.strftime("%d.%m.%Y") if t.date %></td>
        <td> <%= short_str(t.age) if t.age %></td>
      </tr>
    <% end %>
  </table>
<%= will_paginate @resumes, :previous_label => 'Назад', :next_label => 'Дальше' , :renderer => BootstrapPagination::Rails, :class => "pagination pagination-centered ", :container => true %>
</div>
