<div id="regsWindow">  	
	<div class='border_updown_div'> </div>
  	<div class="depot_form">

	<%= form_for @resume do |f| %>
	  <% if @resume.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@resume.errors.count, "error") %>
	        prohibited this user from being saved:</h2>
	      <ul>
	      <% @resume.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	
	    </div>
	  <% end %>
	    <div>
	            <table>
	                <tr>
	                	<td><%= t(:email) %></td>
	                	<td><%= f.text_field :email, :maxlength => "15", :placeholder => t(:email), :id => "emailField" %></td>
	                </tr>
	                <tr>
	                	<td><%= t(:position) %></td>
	                	<td><%= f.text_field :position, :size => "15", :maxlength => "25", :placeholder => t(:position), :id => "doljnostField" %></td>
	                </tr>
	                <tr>
	                	<td><%= t(:name) %></td>
	                	<td> <%= f.text_field :name, :maxlength => "15", :placeholder => t(:name), :id => "imyaField" %></td>
	                </tr>
	                <tr>
	                	<td><%= t(:sex) %></td>
	                	<td><%= f.select :sex, [[t(:sex),"0"],[t(:male),"1"],[t(:female),"2"]]%></td>
	                </tr>
	                
	                <tr>
	                	<td><%= t(:age) %></td>
	                	<td><%= f.text_field :age, :maxlength => "15", :placeholder => t(:age), :id => "loginField" %></td>
	                </tr>
	                <tr>
	                	<td><%= t(:experience) %></td>
	                	<td><%= f.text_field :experience, :maxlength => "15", :placeholder => t(:experience), :id => "loginField" %></td>
	                </tr>
	                <tr>
	                	<td><%= t(:min_salary) %></td>
	                	<td><%= f.text_field :min_wage, :maxlength => "15", :placeholder => t(:min_salary), :id => "loginField" %></td>
	                </tr>
	                <tr>
	                	<td><%= t(:schedule) %></td>
	                	<td><%= f.select :schedule, [[t(:schedule),"0"],[t(:full_time),"1"],[t(:flexible),"2"]]  %></td>
	                </tr>
	                <tr>
	                	<td><%= t(:avatar) %></td>
	                	<td><%= f.file_field :avatar %></td>
	                </tr>
	               
    
  
	            </table>
		    <br>
	    </div> 
	    <div>
	    <div>
	        <%= t(:education) %><br/>
	        <script src="js/checklength.js"></script>
	                      
	         <!-- <span class='symbols_left'>Осталось символов: <span id="counter">200</span></span><br /> -->
	         <%= f.text_area :education, :rows => "3",  :class => "reg_textarea", :onkeyup => "check ()", :id => "obrazovanieField" %><br />
		 </div>
	         <div class="reg_pad">
	             <%= t(:skills) %><br/>        
	            
	            <!-- <span class='symbols_left'>Осталось символов: <span id="counter_opit">500</span></span><br /> -->
	             <%= f.text_area :skills, :rows => "7",  :class => "reg_textarea", :onkeyup => "checkk ()", :id => "navikiField" %>
	        </div>
	        <div class="reg_pad">            
	            <%= t(:about) %><br />           
	            <!-- <span class='symbols_left'>Осталось символов: <span id="counter_self">200</span></span><br /> -->
	             <%= f.text_area :about, :rows => "2",    :class => "reg_textarea", :onkeyup => "checkkk ()", :id => "my_selfField" %>  
	        </div>
	        
	        <div id="footerOfreg">
	            <div id="telefonNumber"><%= t(:phone) %><br />
	               <%= f.text_field :phone %>
	            </div>
	            <div  id="gorodName"><%= t(:city) %><br />
	                <%= f.text_field :city %>
	            </div>
	        </div> 
	    </div>
	</div>		 	
    <div class='border_updown_div'>  </div>  	
    <%= f.submit :submit, :value => t(:create_resume_button), :class => "resumeSubmitButton" %>
    
    <% end %>
</div>
