
<div id="resume_search">    
        <table id='resume_table_result'>
            <tr>
                <td class='resume_table_header' id='resume_profession'><%= t(:position) %></td>
                <td class='resume_table_header' id='resume_notation'><%= t(:salary) %></td>
                <td class='resume_table_header' id='resume_lengthOfService'><%= t(:experience) %></td>
                <td class='resume_table_header' id='resume_earns'><%= t(:name) %></td>        
                <td class='resume_table_header' id='resume_organisation'><%= t(:city) %></td>               
                <td class='resume_table_header' id='resume_dateOf'><%= t(:age) %></td>
                <td class='resume_table_header' id='resume_phone'><%= t(:date_add) %></td>
                <td></td>
            </tr>
<% @resumes.each do |t| %>
           <tr>
                <td class='resume_table_result_left'> <%= link_to t.position, "/resumes/#{t.id}" %></td>
                <td> <%= t.min_wage %> </td>
                <td> <%= t.experience %></td>
                <td> <%= t.name %></td>
                <td> <%= t.city %></td>               
                <td> <%= t.age %></td>
                <td> <%= t.date.strftime("%d.%m.%Y") %></td>
		<% if 1==0 %>
                <td class="show" id='<%= t.id %>' style="cursor:pointer">
                <% if !t.skills.empty? %>
                   Быстрый<br />
                   просмотр
                <% end %>
                </td>
		
            </tr>
            <% if !t.skills.empty? %>
            <tr id="show_<%= t.id %>" class="close">
                <td colspan="8" class="tr_add_info">
                    <%= t.skills %>
                </td>
             
                
            </tr>
	    <% end %>
            <% end %>
<% end %>
        </table>
<%= will_paginate @resumes, :previous_label => 'Назад', :next_label => 'Дальше' , :renderer => BootstrapPagination::Rails, :class => "pagination pagination-centered ", :container => true %>
</div>

<script>
    //Collect our show buttons
    var showClass = document.getElementsByClassName("show");    
    //Stick handlers for every button
    for (var i = 0; i < showClass.length; i++) {                
        showClass[i].addEventListener('click',   showA , true);
    };   
    //show function for every button
    function showA () {     
        var a = this.id;        
        
        var show = document.getElementById("show_" + a);
        var showSoughtForTr = new Expand({ elem : show, openClassName : "open_table_row" });
        showSoughtForTr.check();
        
    }
   
</script>
