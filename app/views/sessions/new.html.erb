<div>
<% if flash[:alert] %>
<p id="notice"><%= flash[:alert] %></p>
<% end %>
<%= form_tag do %>
<fieldset>
<legend>Введите имя пользователя и пароль</legend>
<div>
<%= label_tag :name, 'Имя:' %>
<%= text_field_tag :name, params[:name] %>
</div>
<div>
  <%= label_tag :password, 'Пароль:' %>
  <%= password_field_tag :password, params[:password] %>
</div>


<div>
  <%= button_tag "Войти", :class => "btn" %>
</div>
</fieldset>
<% end %>
</div>
