<%= form_for(@vacancy) do |f| %>

<div class="row">	
	<div class="span4">
	<table id="newVac_table">
		
		<tr>
			<td id="profession-label"><span class="resVac_data required"><%=  t(:position) %></span></td>
			<td class="element"><%= f.text_field :position, :size => "60", :maxlength => "100", :required => true %></td>
		</tr>


		<tr>
			<td id="org-label"><span class="resVac_data optional"><%=  t(:organisation) %></span></td>
			<td class="element"><%= f.text_field :organisation, :size => "60", :maxlength => "100"  %></td>
		</tr>



		<tr>
			<td id="experience-label"><span class="resVac_data optional"><%=  t(:experience) %></span></td>
			<td class="element"><%= f.text_field :experience, :size => "60", :maxlength => "100" %></td>
		</tr>



		<tr>
			<td id="wage-label"><span class="resVac_data optional"><%=  t(:salary) %></span></td>
			<td class="element"><%= f.text_field :salary, :size => "60", :maxlength => "100" %></td>
		</tr>




		<tr>
			<td id="phone-label"><span class="resVac_data optional"><%=  t(:phone) %></span></td>
			<td class="element"><%= f.text_field :phone, :size => "60", :maxlength => "100", :required => true %></td>
		</tr>
    <tr>
			<td id="city-label"><span class="resVac_data optional">Город</span></td>
      <td class="element">
          <%= select_tag "city_id", '<option>Выберите город ...</option><option value="1">Нижневартовск</option><option value="2"> Лангепас</option><option value="3">Мегион</option><option value="4">Радужный</option><option value="5">Покачи</option>'.html_safe %>
        </td>

    </tr>


	</table>
	</div>
	<div class="span5">

			<div id="comment-label"><span class="resVac_data optional">Описание</span></div>
			<div ><%= f.text_area :note, :class => "span5", :rows => "15" %></div>
	</div>
</div>
<div align="right">
<%= f.submit :submit,  :value => t(:add_vacancy_button), :class => "NewVacButton" %> 
</div>
<% end %>
