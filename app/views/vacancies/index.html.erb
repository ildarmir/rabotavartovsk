<h1>Listing vacancies</h1>

<table>
  <tr>
    <th>Position</th>
    <th>Note</th>
    <th>Experience</th>
    <th>Salary</th>
    <th>Organisation</th>
    <th>Phone</th>
    <th>Date</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @vacancies.each do |vacancy| %>
  <tr>
    <td><%= vacancy.position %></td>
    <td><%= vacancy.note %></td>
    <td><%= vacancy.experience %></td>
    <td><%= vacancy.salary %></td>
    <td><%= vacancy.organisation %></td>
    <td><%= vacancy.phone %></td>
    <td><%= vacancy.date %></td>
    <td><%= vacancy.email %></td>
    <td><%= link_to 'Show', vacancy %></td>
    <td><%= link_to 'Edit', edit_vacancy_path(vacancy) %></td>
    <td><%= link_to 'Destroy', vacancy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

