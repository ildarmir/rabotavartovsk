<div id="filterContainer">
  Фильтр:<input type="text" class="span8" id="quickSearchQuery" placeholder="Введите вакансию">
</div>
<div id="span9">
  <table id='' class="table table-bordered table-hover table-condensed">
    <thead>
    <tr>
      <th class='vacancy_table_header' id='vacancy_profession'>Профессия</th>
      <th class='vacancy_table_header' id='vacancy_lengthOfService'>Опыт</th>
      <th class='vacancy_table_header' id='vacancy_earns'>Зарплата</th>
      <th class='vacancy_table_header' id='vacancy_organisation'>Организация</th>
      <th class='vacancy_table_header' id='vacancy_phone'>Телефон</th>
      <th class='vacancy_table_header' id='vacancy_dateOf'>Дата добавления</th>
    </tr>
  </thead>
    <% @vacancies.each do |t| %>
      <tr>
        <td class='vacancy_table_result_left'> <%= link_to short_str(t.position,30), "/vacancies/#{t.id}", title: "Подробнее о вакансии #{t.position}" %></td>
        <td> <%= t.experience && short_str(t.experience,15) %></td>
        <td> <%= t.salary && short_str(t.salary,15) %></td>
        <td> <%= t.organisation && short_str(t.organisation,20) %></td>
        <td> <%= t.phone && short_str(t.phone,15) %></td>
        <td> <%= t.updated_at && t.updated_at.strftime("%d.%m.%Y") %></td>
      </tr>
    <% end %>
  </table>
	<%= will_paginate @vacancies, :previous_label => 'Назад', :next_label => 'Дальше', :renderer => BootstrapPagination::Rails, :class => "pagination pagination-centered" %> 
</div>
